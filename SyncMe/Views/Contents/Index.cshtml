@model IEnumerable<SyncMe.Models.Content>
@using SyncMe.Models
@using Microsoft.AspNetCore.Http
@using System.Text.RegularExpressions
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "BalanceMe Academy";
    bool isAdmin = HttpContextAccessor.HttpContext.Session.GetString("IsAdmin") == "true";

    // Agrupa os conteúdos por categoria
    var groupedContents = Model
        .GroupBy(item => item.Category?.Name ?? "Outros")
        .OrderBy(g => g.Key);
}

<div class="container mt-4">
    <div class="row mb-3 align-items-center">
        <div class="col-md-6">
            <h2>@ViewData["Title"]</h2>
            <p>Conteúdos para seu bem-estar e produtividade.</p>
        </div>
        <div class="col-md-6 text-md-end">
            @if (isAdmin) {
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Novo Conteúdo
                </a>
            }
        </div>
    </div>

    <div class="card card-body mb-4">
        <form asp-action="Index" method="get">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Buscar por Título</label>
                    <input type="text" class="form-control" name="searchString" value="@ViewBag.SearchString">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Categoria</label>
                    <select name="categoryId" class="form-select" asp-items="ViewBag.Categories">
                        <option value="">Todas</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Dificuldade</label>
                    <select name="difficulty" class="form-select" asp-items="Html.GetEnumSelectList<DifficultyLevel>()">
                        <option value="">Todas</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-secondary w-100">Filtrar</button>
                </div>
            </div>
        </form>
    </div>

    @foreach (var categoryGroup in groupedContents) {
        <div class="category-section mb-5">
            <h2 class="category-title">@categoryGroup.Key</h2>
            <hr class="mb-4" />

            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                @foreach (var item in categoryGroup) {
                    <div class="col">
                        <div class="card h-100 shadow-sm">

                            @* --- LÓGICA DE PRIORIDADE DE CAPA --- *@
                            @{
                                var youtubeEmbed = GetYouTubeEmbedLink(item.MediaUrl);
                                bool hasCoverImage = !string.IsNullOrEmpty(item.CoverImageUrl);
                            }

                            @if (hasCoverImage) {
                                <img src="@item.CoverImageUrl" class="card-img-top" alt="@item.Title" style="height: 200px; object-fit: cover;">
                            }
                            else if (youtubeEmbed != null) {
                                <div style="height: 200px; overflow: hidden; border-top-left-radius: 10px; border-top-right-radius: 10px;">
                                    <iframe src="@youtubeEmbed" title="Video" frameborder="0" allowfullscreen style="width: 100%; height: 100%;"></iframe>
                                </div>
                            }
                            else {
                                <img src="https://via.placeholder.com/400x200.png?text=Sem+Capa" class="card-img-top" style="height: 200px; object-fit: cover;">
                            }

                            <div class="card-body">
                                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                                <p class="card-text text-muted small">
                                    @item.Summary
                                </p>
                            </div>
                            <div class="card-footer bg-white border-0 p-3">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="badge bg-info text-dark">@item.Category?.Name</span>
                                    <span class="badge bg-light text-dark">@item.Difficulty</span>
                                </div>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">Ler Artigo</a>

                                @if (isAdmin) {
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Del</a>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

@functions {
    public string? GetYouTubeEmbedLink(string? url) {
        if (string.IsNullOrEmpty(url)) return null;
        var regex = new Regex(@"(?:youtube\.com\/(?:[^\/]+\/.+\/|(?:v|e(?:mbed)?)\/|.*[?&]v=)|youtu\.be\/)([^""&?\/\s]{11})");
        var match = regex.Match(url);
        return match.Success ? $"https://www.youtube.com/embed/{match.Groups[1].Value}" : null;
    }
}